<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/todoix</property>
        <property name="hibernate.connection.username">alexander</property>
        <property name="hibernate.connection.password">fghtkm</property>
        <property name="hibernate.default_schema">todoix_app</property>
        <property name="hibernate.connection.pool_size">100</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>

        <mapping class="ru.link.todoix.Objects.ListEntity"/>
        <mapping class="ru.link.todoix.Objects.CaseEntity"/>
    </session-factory>
</hibernate-configuration>